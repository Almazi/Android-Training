<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:layout_constraintTop_toBottomOf="@+id/fourth"
    tools:context="almazi.calculator.fifth_row">


    <Button
        android:id="@+id/decimal"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:text="." />

    <Button
        android:id="@+id/zero"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/decimal"
        android:text="0" />

    <Button
        android:id="@+id/percentage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/zero"
        android:text="%" />

    <Button
        android:id="@+id/equal"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/percentage"
        android:text="=" />

</android.support.constraint.ConstraintLayout>


